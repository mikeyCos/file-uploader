<form action="/account/login" method="POST" class="form-login">
  <h2>Login in to your account</h2>
  <ul>
    <li class="form-item">
      <label for="username">Username</label>
      <input name="username" id="username" type="text" value="<%= locals.inputs?.username %>" autocomplete="username" autofocus>
      <% if (locals.errors?.username) { %>
        <p class="input-error active-error"><%= errors.username.msg %></p>
      <% } %>
    </li>
    <li class="form-item">
      <label for="password">Password</label>
      <input name="password" id="password" type="password" value="<%= locals.inputs?.password %>" autocomplete="current-password">
      <% if (locals.errors?.password) { %>
        <p class="input-error active-error"><%= errors?.password.msg %></p>
      <% } %>
    </li>
    <% if(locals.message) { %>
      <li class="form-item">
        <p class="input-error active-error"><%= locals.message %></p>
      </li>
    <% } %>
    <li class="form-item">
      <label for="name">Enter your name</label>
      <input name="name" id="name" type="text" autocomplete="off" placeholder="Enter your name" value="<%= locals.inputs?.name %>">
    </li>
  </ul>
  <div class="form-controls">
    <button type="submit">Login</button>
  </div>
  <p>
    <a href="/account/create">Need an account?</a>
  </p>
</form>