<form action="<%= locals.formAction ?? '' %>" onsubmit="onSubmit(event, editItem)" method="dialog" class="form-edit-file" data-item-id="<%= locals.fileID ?? file.id %>">
  <h2>Rename</h2>
  <ul>
    <li class="form-item">
      <label for="file_name"></label>
      <input type="text" name="file_name" id="file_name" oninput="name_onInput(event)" value="<%= locals.file?.name || locals.errors?.file_name.value %>">
      <% if (locals.errors?.file_name) { %>
        <p class="input-error active-error"><%= errors?.file_name.msg %></p>
      <% } %>
    </li>
    <li class="form-item">
      <label for="name">Enter your name</label>
      <input name="name" id="name" type="text" autocomplete="off" placeholder="Enter your name" value="<%= locals.inputs?.name %>">
    </li>
  </ul>
  <div class="form-controls">
    <button type="button" onclick="closeDialog(event)" class="btn-cancel">Cancel</button>
    <button type="submit">Ok</button>
  </div>
  
</form>