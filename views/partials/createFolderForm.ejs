<form action="/drive/folder/create" method="dialog" onsubmit="onSubmit(event, createFolder)" onclick="stopPropagation(event)" class="form-create-folder" data-form-type="folder">
  <h2>New Folder</h2>
  <ul>
    <li class="form-item">
      <label for="folder_name"></label>
      <input type="text" name="folder_name" id="folder_name" oninput="name_onInput(event)" value="<%= locals.inputs?.folder_name %>">
      <% if (locals.errors?.folder_name) { %>
        <p class="input-error active-error"><%= errors?.folder_name.msg %></p>
      <% } %>
    </li>
  </ul>
  <button type="button" onclick="closeDialog(event)">Cancel</button>
  <button type="submit" <%= locals.inputs?.folder_name || "disabled" %>>Create</button>
</form>