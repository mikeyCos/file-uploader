<!DOCTYPE html>
<html lang="en">
  <%- include('./head', { title: status }) %>
  <body>
    <%- include('./header') %>
    <main>
      <section id="error-<%= status %>">
        <% switch(status) {
          case 401: %>
            <article class="unauthorized">
              <h2>Login Required</h2>
              <div class="article-content">
                <div class="text-container">
                  <p>You must <a href="/account/login">log in</a> to view this resource.</p>
                  <p>Don't have an account? <a href="/account/create">Sign up now!</a></p>
                </div>
                <div class="img-container">
                  <%- include('../../public/assets/icons/secure_login.svg') %>
                </div>
              </div>
            </article>
          <% break;
          case 403:
          case 404: 
          case 410:
          case 422:
          %>
            <article class="error-other">
              <h2><%= message %></h2>
            </article>
          <% break;
        } %>
      </section>
    </main>
    <%- include('./footer') %>
  </body>
</html>