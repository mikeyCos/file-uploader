generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text
  expiresAt DateTime
}

/**
 * model Account {
 * id       String  @id @default(uuid())
 * email    String  @unique
 * name     String
 * username String  @unique
 * password String
 * root     Folder?
 * }
 * // Folders can have files and/or folders
 * model Folder {
 * id        String   @id @default(uuid())
 * name      String   @default("New folder")
 * createdAt DateTime @default(now())
 * updatedAt DateTime @updatedAt
 * account   Account  @relation(fields: [accountId], references: [id])
 * accountId String   @unique
 * files File[] @relation("folder")
 * }
 * model File {
 * id        String   @id @default(uuid())
 * name      String   @default("New file")
 * createdAt DateTime @default(now())
 * updatedAt DateTime @updatedAt
 * folder   Folder @relation("folder", fields: [folderId], references: [id])
 * folderId String
 * }
 */

model Account {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String
  username String   @unique
  password String
  folders  Folder[]
}

// Folders can have files and/or folders
model Folder {
  id        String   @id @default(uuid())
  name      String   @default("New folder")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  account   Account  @relation(fields: [accountId], references: [id])
  accountId String   @unique

  files File[]
}

model File {
  id        String   @id @default(uuid())
  name      String   @default("New file")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  folder   Folder? @relation(fields: [folderId], references: [id])
  folderId String?
}
